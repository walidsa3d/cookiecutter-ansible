galaxy_info:
  author: "{{ cookiecutter.author_name }}"
  description: "{{ cookiecutter.role_description }}"
  license: MIT
  min_ansible_version: 2.9
  platforms:
    {% for platform in cookiecutter.supported_platforms %}
    - name: {{ platform.name }}
      versions:
        {% for version in platform.versions %}
        - {{ version }}
        {% endfor %}
    {% endfor %}
  galaxy_tags: {{ cookiecutter.galaxy_tags }}
dependencies: []